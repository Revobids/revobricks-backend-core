# Database Configuration
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=backend_core
DB_PORT=5432

# TypeORM Configuration
# Set to 'true' to enable database synchronization (use only in development)
TYPEORM_SYNCHRONIZE=true
# Set to 'true' to drop and recreate schema (WARNING: destroys all data)
# TYPEORM_DROP_SCHEMA=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# Adminer Configuration
ADMINER_PORT=8080

# Application
PORT=3000
NODE_ENV=development

# Firebase (Optional)
# FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/firebase-service-account.json